<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/thumbnailImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:contentDescription="@string/anime_thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/steins" />

    <TextView
        android:id="@+id/titleText"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/thumbnailImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Steins;gate 0" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:numStars="5"
        android:rating="4.5"
        app:layout_constraintStart_toEndOf="@id/thumbnailImage"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <TextView
        android:id="@+id/kindText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        app:layout_constraintBottom_toBottomOf="@id/thumbnailImage"
        app:layout_constraintStart_toEndOf="@id/thumbnailImage"
        tools:text="TV series" />

    <TextView
        android:id="@+id/animeStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_goneMarginEnd="@dimen/normal_margin"
        app:layout_constraintBottom_toBottomOf="@id/thumbnailImage"
        app:layout_constraintEnd_toStartOf="@id/releaseYearText"
        tools:text="Released" />

    <TextView
        android:id="@+id/releaseYearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/normal_margin"
        app:layout_constraintBaseline_toBaselineOf="@id/animeStatusText"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2018" />
</androidx.constraintlayout.widget.ConstraintLayout>